name: Delete Deployment

on:
  delete:
    branches-ignore:
      - main

jobs:
  delete:
    name: Delete Deployments
    runs-on: ubuntu-latest
    steps:
      - name: Delete Deployment (Preview - airtime-vending)
        uses: strumwolf/delete-deployment-environment@v2
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          environment: Preview - airtime-vending

      - name: Delete Deployment (Preview - airtime-vending-api)
        uses: strumwolf/delete-deployment-environment@v2
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          environment: Preview - airtime-vending-api

